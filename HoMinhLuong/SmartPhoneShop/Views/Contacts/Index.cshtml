@{
    ViewBag.Title = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Contacts", FormMethod.Post, new { area = "SmartPhoneShop.Controllers" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="text-uppercase text-center text-info"><strong>Liên Hệ Với Chúng Tôi</strong></div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Họ Và Tên</label>
                                    @Html.Editor("FullName", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="form-group">
                                    <label>Tiêu Đề</label>
                                    @Html.Editor("Title", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="form-group text-danger">
                                    @ViewBag.Error
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <div class="form-group">
                                    <label>Số Điện Thoại</label>
                                    @Html.Editor("Phone", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Nội Dung</label>
                                    @Html.TextArea("Detail", new { @class = "form-control" })
                                </div>
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-sm btn-info">Gửi</button>
                                </div>
                            </div>
                            <div class="bando mt-5" style="width: 100%; margin-bottom: -50px;">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d7838.684254869503!2d106.70676642475235!3d10.785086936675276!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1547181657956" width="100%" height="300px" frameborder="0" style="border:0" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<form>
    @Html.Raw(ViewBag.StrError)
</form>

