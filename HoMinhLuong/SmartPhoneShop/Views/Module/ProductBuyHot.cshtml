@model IEnumerable<MyLibrary.Model.Product>
<div class="card sp-khuyenmai mt-3">
    <div class="card-header list-group-item active">
        Sản Phẩm Mới
    </div>
    <div class="card-body">
        @foreach (var row in Model)
        {
            <div class="motsanpham-khuyenmai my-3">
                <div class="row">
                    <div class="col-6 boder-gray py-2">
                        <a href="@row.Slug"><img src="~/Public/Image/Product/@row.Img" width="100%" height="150px" alt="Alternate Text" /></a>
                    </div>
                    <div class="col-6 mt-4">
                        <p class="ttt-tieude"><a href="@row.Slug">@row.Name</a></p>
                        <p class="gia-km"><span class="text-danger">@String.Format("{0:n0}", row.Price) VNĐ</span> <del class="text-muted">@String.Format("{0:n0}", row.PriceSale) VNĐ</del></p>
                    </div>
                </div>
            </div>@*het mot san pham khuyen mai*@
        }
    </div>
</div>
@*  het san pham khuyen mai*@
