@model MyLibrary.Model.Product
@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 mb-4">
            <img src="~/Public/image/product/@Model.Img" class="img-fluid" clalt="San pham" />
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p class="text-center">@Model.Detail</p>
            <h3 class="card-text text-center text-danger font-weight-bold">
                @String.Format("{0:n0}", Model.PriceSale) VNĐ
                <a href="@Url.Action("AddItem","Cart", new {productId = Model.Id})">
                    <i class="fas fa-cart-plus text-primary"></i>
                </a>
            </h3>

         

            <a href="" class="btn btn-primary d-block">MUA NGAY</a>
        </div>
    </div>
    Bình Luận
    <div class="row my-3">
        <div class="fb-comments" data-href="https://localhost:44317/@Model.Slug" data-width="" data-numposts="5"></div>
    </div>
    <h3>Sản phẩm cùng loại</h3>
    <div class="row mt-4">
        @foreach (var proother in ViewBag.ListOther)
        {
            <div class="col-md-3 mt-4">
                <div class="card" style="width: 18rem;">
                    <a href="~/@proother.Slug"></a>
                    <img class="card-img-top" src="~/Public/image/product/@proother.Img">
                    <div class="card-body text-center">
                        <a href="~/@proother.Slug">@proother.Name</a>
                        @*<h5 class="card-title text-center">@pro.Name</h5>*@
                        <p class="card-text text-center text-danger font-weight-bold">
                            @String.Format("{0:n0}", proother.PriceSale) VNĐ
                        </p>
                        <p class="card-text text-center text-muted pricesale">
                            @String.Format("{0:n0}", proother.Price) VNĐ
                        </p>
                        <a href="" class="btn btn-primary d-block">MUA NGAY</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

