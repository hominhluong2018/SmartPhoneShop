@model IEnumerable<MyLibrary.Model.Post>
@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-danger">TẤT CẢ TIN TỨC</h2>
<div class="container demo">
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-6">
                <div class="owl-item" style="width: 555px;">
                    <div class="post-slide">
                        <div class="post-img">
                            <img src="~/Public/image/tintuc/@post.Img">
                            <div class="over-layer">
                                <ul class="post-link">
                                    <li>
                                        <a href="~/@post.Slug" class="fa fa-search"></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="post-review">
                            <h3 class="post-title">
                                <a href="~/@post.Slug">@post.Title</a>
                            </h3>
                            <ul class="post-info">
                                <li>@post.MetaKey</li>
                            </ul>
                            <p class="post-description text-center"> Tác giả: @post.MetaDesc</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    </div>


