@model IEnumerable<MyLibrary.Model.Product>
    @if (Model.Count() > 0)
    {
<h3 class="text-center mt-5 category-item">@ViewBag.NameCat</h3>
<div class="row">
    @foreach (var pro in Model)
    {
        <div class="col-md-4 mt-4">
            <div class="card" style="width: 18rem;">
                <a href="~/@pro.Slug"></a>
                <img class="card-img-top" src="~/Public/image/product/@pro.Img">
                <div class="card-body text-center">
                    <a href="~/@pro.Slug">@pro.Name</a>
                    @*<h5 class="card-title text-center">@pro.Name</h5>*@
                    <p class="card-text text-center text-danger font-weight-bold">
                        @String.Format("{0:n0}", pro.PriceSale) VNĐ
                    </p>
                    <p class="card-text text-center text-muted pricesale">
                        @String.Format("{0:n0}", pro.Price) VNĐ
                    </p>
                    <a href="" class="btn btn-primary d-block">MUA NGAY</a>
                </div>
            </div>
        </div>
    }
</div>
    }

